= content_for :hero do
  #main.bg-no-repeat.bg-cover.bg-fixed.bg-center.h-screen.w-100
    .flex.flex-col.items-center.justify-center.h-screen.text-white.z-0.mx-5.text-center
      h1.font-bold.text-xl.md:text-4xl.text-2xl
        span = @location['code']
        span.mx-3 -
        span = @location['state'].upcase
        span.mx-3 -
        == @today['bearing']
      h2.mt-5.font-bold.sm:text-xl.md:text-3xl.lg:text-4xl.text-center.bg-transparent
        = @location['zone'].upcase
      p.my-5.font-bold.md:text-2xl #{l @today['date'].to_date, format: :extra} bersamaan dengan  #{l @today['hijri'].to_date, locale: :hijri}H

      .flex.flex-wrap.justify-center.font-bold.md:text-3xl.lg:text-5xl.text-2xl.text-center.h-auto
        .p-4.imsak
          h4 IMSAK
          = l @today['imsak'].to_time, format: "%I:%M %p"
        .p-4.subuh
          h4 SUBUH
          = l @today['fajr'].to_time, format: "%I:%M %p"
        .p-4.syuruk
          h4 SYURUK
          = l @today['syuruk'].to_time, format: "%I:%M %p"
        .p-4.zohor
          h4 ZOHOR
          = l @today['dhuhr'].to_time, format: "%I:%M %p"
        .p-4.asar
          h4 ASAR
          = l @today['asr'].to_time, format: "%I:%M %p"
        .p-4.maghrib
          h4 MAGHRIB
          = l @today['maghrib'].to_time, format: "%I:%M %p"
        .p-4.isyak
          h4 ISYAK
          = l @today['isha'].to_time, format: "%I:%M %p"

.w-full.overflow-x-auto.glass.p-8.rounded-lg.opacity-100
  table.table.w-full
    thead.text-center
      tr
        th.md:text-xl Tarikh
        th.md:text-xl Hari
        th.md:text-xl Imsak
        th.md:text-xl Subuh
        th.md:text-xl Syuruk
        th.md:text-xl Zohor
        th.md:text-xl Asar
        th.md:text-xl Maghrib
        th.md:text-xl Isyak

    tbody.text-center.font-medium.md:text-xl
      - @monthly.each do |month|
        - date = month['date'].to_date
        tr
          td
            .font-medium = l date, format: :long
            .font-italic = l month['hijri'].to_date, locale: :hijri
          td = l date, format: :day
          td = l month['imsak'].to_time, format: '%I:%M %p'
          td = l month['fajr'].to_time, format: '%I:%M %p'
          td = l month['syuruk'].to_time, format: '%I:%M %p'
          td = l month['dhuhr'].to_time, format: '%I:%M %p'
          td = l month['asr'].to_time, format: '%I:%M %p'
          td = l month['maghrib'].to_time, format: '%I:%M %p'
          td = l month['isha'].to_time, format: '%I:%M %p'

= content_for :modal do
  .modal-header
    h4.text-center Pilih Lokasi / Zon
  .modal-body
    ul.menu.bg-base-100.rounded-box.p-2
      - @locations.each do |location|
        li
          = link_to location['zone'], zone_path(id: location['code'].downcase)
