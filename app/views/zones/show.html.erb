<% content_for :ogdescription do %>
  <%= "#{@location["location"]}, #{@location["state"]}, #{l Date.current, format: :extra} bersamaan dengan #{hijri_date(Date.current.strftime("%Y-%m-%d"))} H" %>
<% end %>

