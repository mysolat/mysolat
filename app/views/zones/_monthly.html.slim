- @monthly.each do |month|
  - date = month["date"].to_date
  - klass = "bg-primary text-primary-content" if date == Date.current
  .card.shadow-md.my-2 class=klass
    .card-body.p-2.grow.md:flex-row
      .flex-none
        .flex.w-full.justify-center.md:block
          .span.title.mr-2 = l date, format: :day
          .font-medium.mr-2 = l date, format: :long
          .font-italic = hijri_date month["hijri"]
      .flex-auto.grid.grid-cols-7.justify-items-center.content-center.items-center
        .grid-col.text-center
          .span.title.text-xs.md:text-sm Imsak
          .time.mx-1.text-sm.md:text-xl.lg:text-2xl = l month["imsak"].to_time, format: "%I:%M %p"
        .grid-col.text-center
          .span.title.text-xs.md:text-sm Subuh
          .time.mx-1.text-sm.md:text-xl.lg:text-2xl = l month["fajr"].to_time, format: "%I:%M %p"
        .grid-col.text-center
          .span.title.text-xs.md:text-sm Syuruk
          .time.mx-1.text-sm.md:text-xl.lg:text-2xl = l month["syuruk"].to_time, format: "%I:%M %p"
        .grid-col.text-center
          .span.title.text-xs.md:text-sm Zohor
          .time.mx-1.text-sm.md:text-xl.lg:text-2xl = l month["dhuhr"].to_time, format: "%I:%M %p"
        .grid-col.text-center
          .span.title.text-xs.md:text-sm Asar
          .time.mx-1.text-sm.md:text-xl.lg:text-2xl = l month["asr"].to_time, format: "%I:%M %p"
        .grid-col.text-center
          .span.title.text-xs.md:text-sm Maghrib
          .time.mx-1.text-sm.md:text-xl.lg:text-2xl = l month["maghrib"].to_time, format: "%I:%M %p"
        .grid-col.text-center
          .span.title.text-xs.md:text-sm Isyak
          .time.mx-1.text-sm.md:text-xl.lg:text-2xl = l month["isha"].to_time, format: "%I:%M %p"
