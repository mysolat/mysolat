<!-- Location Picker Modal -->
<div class="h-full flex flex-col bg-base-100/10" data-controller="filter">
  <!-- Header -->
  <div class="sticky top-0 bg-base-100/20 z-10">
    <div class="flex items-center justify-between p-4">
      <label class="btn btn-ghost btn-circle btn-sm" for="filter-modal">
        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
        </svg>
      </label>
      <h2 class="text-lg font-bold">Pilih Lokasi</h2>
      <!-- Spacer for centering -->
      <div class="w-10"></div>
    </div>

    <!-- Search Bar -->
    <div class="px-4 pb-4">
      <div class="relative">
        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
          <svg class="w-5 h-5 text-base-content/40" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"/>
          </svg>
        </div>
        <input class="input input-bordered w-full pl-12 rounded-xl bg-base-200/60 border-0 focus:bg-base-100/30 focus:ring-2 focus:ring-primary" type="search" placeholder="Cari kawasan atau negeri..." data-action="input->filter#filterList" data-filter-target="searchTerm" />
      </div>
    </div>
  </div>

  <!-- Location List -->
  <div class="flex-1 overflow-y-auto p-4">
    <div class="space-y-6">
      <!-- Auto-detect Location Button -->
      <button type="button"
              class="flex items-center gap-3 w-full p-4 rounded-xl bg-primary/10 hover:bg-primary hover:text-primary-content transition-all duration-200 group"
              data-action="click->geolocation#detect"
              aria-label="Kesan lokasi secara automatik">
        <div class="bg-primary text-primary-content group-hover:bg-primary-content group-hover:text-primary rounded-lg p-2 transition-all">
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 12m-3 0a3 3 0 1 0 6 0 3 3 0 1 0-6 0"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 2v3m0 14v3m10-10h-3M5 12H2"/>
            <circle cx="12" cy="12" r="9" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="flex-1 text-left">
          <div class="font-semibold">Kesan Lokasi Automatik</div>
          <div class="text-xs opacity-60 group-hover:opacity-80">Gunakan GPS untuk mengesan zon solat anda</div>
        </div>
        <svg class="w-5 h-5 opacity-40 group-hover:opacity-100 transition-opacity" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5"/>
        </svg>
      </button>
      <% @locations.group_by { |l| l["state"] }.each do |state, locations| %>
        <section data-filter-target="parentListItem">
          <!-- State Header -->
          <div class="flex items-center gap-2 mb-3 sticky top-0 p-2 rounded-lg">
            <div class="bg-primary/10 text-primary rounded-lg p-2">
              <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"/>
              </svg>
            </div>
            <h3 class="font-bold text-base"><%= state %></h3>
          </div>

          <!-- Locations Grid -->
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-2">
            <% locations.each do |location| %>
              <a class="group flex items-center gap-3 p-3 rounded-xl bg-base-200/50 hover:bg-primary hover:text-primary-content transition-all duration-200" href="<%= location_path(location["location"].downcase.tr(" ", "-")) %>" data-filter-target="listItem">
                <div class="flex-1">
                  <div class="font-medium group-hover:font-semibold"><%= location["location"] %></div>
                  <div class="text-xs opacity-60 group-hover:opacity-80"><%= location["code"] %></div>
                </div>
                <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5"/>
                </svg>
              </a>
            <% end %>
          </div>
        </section>
      <% end %>
    </div>
  </div>

  <!-- Current Location Footer -->
  <% if @location %>
    <div class="sticky bottom-0 bg-base-100/20 p-4">
      <div class="flex items-center gap-3 p-3 bg-primary/10 rounded-xl">
        <div class="bg-primary text-primary-content rounded-lg p-2">
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-xs text-base-content/60">Lokasi semasa</div>
          <div class="font-semibold"><%= @location["location"] %></div>
        </div>
        <div class="text-xs text-base-content/50"><%= @location["code"] %></div>
      </div>
    </div>
  <% end %>
</div>
